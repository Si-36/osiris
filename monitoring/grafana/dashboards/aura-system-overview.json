{
  "dashboard": {
    "id": null,
    "title": "AURA Intelligence - System Overview",
    "tags": ["aura", "ai", "production"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health Score",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(aura_component_health_score) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aura_requests_total[5m])",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "requests/sec",
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(aura_request_duration_seconds_bucket[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "GPU Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "aura_gpu_utilization_percent",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "GPU %",
            "max": 100,
            "min": 0,
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "aura_memory_usage_bytes / (1024^3)",
            "refId": "A",
            "legendFormat": "Memory GB"
          },
          {
            "expr": "aura_gpu_memory_used_bytes / (1024^3)",
            "refId": "B",
            "legendFormat": "GPU Memory GB"
          }
        ],
        "yAxes": [
          {
            "label": "GB",
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 6,
        "title": "Redis Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aura_redis_commands_total[5m])",
            "refId": "A",
            "legendFormat": "Commands/sec"
          },
          {
            "expr": "aura_redis_connected_clients",
            "refId": "B",
            "legendFormat": "Connected Clients"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
      },
      {
        "id": 7,
        "title": "Component Status",
        "type": "table",
        "targets": [
          {
            "expr": "aura_component_health_score",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "component": "Component",
                "Value": "Health Score"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aura_errors_total[5m])",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "errors/sec",
            "show": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}