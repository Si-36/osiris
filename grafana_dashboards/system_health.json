      "id": 21,
      "type": "gauge",
      "title": "Overall System Health",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "aura_system_health_score{subsystem=\"overall\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "max": 1,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.7
              },
              {
                "color": "green",
                "value": 0.9
